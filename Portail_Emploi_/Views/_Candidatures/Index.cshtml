@model IEnumerable<Portail_Emploi_.Models.Candidat>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.N_Etude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.N_Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.D_Employeur)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.N_Etude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.N_Experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.D_Employeur)
            </td>

            <td>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.ID_Candidat">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ID_Candidat">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
